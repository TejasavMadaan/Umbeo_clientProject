<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment">


    <RelativeLayout
        android:id="@+id/r2"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="202dp"
                android:layout_height="48dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="70dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="Payment "
                android:textAlignment="center"
                android:textColor="@color/colorTextSecondary"
                android:textSize="32dp"
                android:textStyle="bold"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.338"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/textView2"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="80dp"
                android:paddingTop="15dp"
                android:src="@drawable/sidebar" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r2">


        <LinearLayout
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="40dp"
                android:text="Payable Amount "
                android:textSize="18dp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="145dp"
                android:text="$ 31.47"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/a1"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/role_radioGroup_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layoutDirection="rtl"
                android:paddingLeft="40dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="200dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="Cash on Delivery"
                        android:textSize="15dp" />

                    <LinearLayout

                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/cash"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="185dp"
                            android:paddingLeft="10dp"
                            android:text="COD" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="16dp"
                            android:src="@drawable/paymentcash" />
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_marginRight="267dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="Wallet"
                        android:textSize="15dp" />

                    <LinearLayout

                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/amazonPay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="135dp"
                            android:paddingLeft="10dp"
                            android:text="Amazon Pay" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="16dp"
                            android:src="@drawable/amazonpay" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/applePay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="145dp"
                            android:paddingLeft="10dp"
                            android:text="Apple Pay" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="18dp"
                            android:src="@drawable/applepay" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/payPal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="175dp"
                            android:paddingLeft="10dp"
                            android:text="PayPal" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="16dp"
                            android:src="@drawable/paypal" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_marginRight="280dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="left"
                        android:text="UPI"
                        android:textSize="15dp" />

                    <LinearLayout

                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/amazonPayUPI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="115dp"
                            android:paddingLeft="10dp"
                            android:text="Amazon Pay UPI" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="16dp"
                            android:src="@drawable/amazonpay" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="308dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="14dp"
                        android:background="@drawable/payment_outline"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/googleUPI"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />

                        <TextView
                            android:id="@+id/cash1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="115dp"
                            android:paddingLeft="10dp"
                            android:text="Google Pay UPI" />

                        <ImageView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="20dp"
                            android:src="@drawable/googlepay" />
                    </LinearLayout>
                </LinearLayout>

            </RadioGroup>


        </LinearLayout>

        <Button
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/a2"
            android:layout_centerInParent="true"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/active"
            android:text="Continue"
            app:cornerRadius="16dp" />

    </RelativeLayout>


</RelativeLayout>