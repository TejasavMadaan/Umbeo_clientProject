<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dashboard">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/location" />

                <TextView
                    android:id="@+id/addre"
                    android:layout_marginTop="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="address"
                    android:layout_marginLeft="6dp"

                    android:textColor="@color/colorPrimaryText"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log in / signup"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold"
                    android:layout_marginLeft="167dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp"
                android:layout_centerInParent="true"
                android:background="@drawable/search_outline"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/address"
                tools:ignore="MissingConstraints"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="26dp"
                    android:paddingRight="8dp"
                    android:src="@drawable/search" />

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@null"
                    android:hint="Search"/>


            </LinearLayout>

            <TextView
                android:id="@+id/Cat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="40dp"
                android:text="Categories"
                android:textColor="@color/grey"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/temp"
                tools:layout_editor_absoluteX="82dp"
                android:layout_marginLeft="40dp" />

            <View
                android:id="@+id/viewSupporter"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginBottom="50dp"
                app:layout_constraintBottom_toBottomOf="@id/Cat"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewSupporter"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/iconmapfood"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Food &amp; Drinks"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewSupporter"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/personal"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Personal healthcare"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewSupporter"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/beauty"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Beauty &amp; fashion"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewSupporter"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="60dp">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/kids"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Kids &amp; babies"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardBanana"
                android:layout_width="360dp"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/cat1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bananas1"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best and healthiest products in town"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:layout_marginTop="110dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/recommendations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="40dp"
                android:text="Recommendations"
                android:textColor="@color/grey"
                android:textSize="25dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/cardBanana"
                tools:layout_editor_absoluteX="82dp"
                android:layout_marginLeft="40dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/rec1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/recommendations"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Featured"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rec2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/recommendations"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Trending"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/rec3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/recommendations"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="0dp"
                        android:gravity="center"
                        android:text="Popular"
                        android:textColor="@color/colorWhite"
                        android:textSize="15sp" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list1"
                android:layout_width="360dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/rec1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/fruits"
                    android:layout_marginRight="240dp"/>

                <TextView
                    android:id="@+id/fruits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fruits"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Delivery"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="270dp"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list2"
                android:layout_width="360dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/list1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/vegi"
                    android:layout_marginRight="240dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vegetables"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Delivery"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="270dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/list3"
                android:layout_width="360dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@id/list2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/readymade"
                    android:layout_marginRight="240dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ready Made"
                    android:textColor="@color/green"
                    android:textSize="20sp"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="130dp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Delivery"
                    android:textColor="@color/green"
                    android:textSize="15sp"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="270dp" />

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>