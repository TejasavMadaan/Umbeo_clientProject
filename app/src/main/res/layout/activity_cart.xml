<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_1sdp"
                android:text="Cart"
                android:textSize="@dimen/_20sdp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginLeft="@dimen/_1sdp" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:src="@drawable/menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.958"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Del"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Delivery At"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:textColor="@color/lightgrey"
                app:layout_constraintTop_toTopOf="@id/Cart"
                android:layout_marginLeft="@dimen/_20sdp" />

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_12sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/Del"
                android:layout_marginStart="@dimen/_1sdp"
                android:layout_marginLeft="@dimen/_1sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/_12sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:src="@drawable/location" />


                <EditText
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:text="Current Address"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/editAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:src="@drawable/pen" />
            </LinearLayout>

            <TextView
                android:id="@+id/Det"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Details"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold"
                android:textColor="@color/lightgrey"
                app:layout_constraintTop_toTopOf="@id/address"
                android:layout_marginLeft="@dimen/_20sdp" />

            <View
                android:id="@+id/viewSupporter"
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginBottom="@dimen/_35sdp"
                app:layout_constraintBottom_toBottomOf="@id/Det"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cat1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toBottomOf="@id/viewSupporter"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_40sdp">

                <LinearLayout
                    android:layout_width="@dimen/_285sdp"
                    android:layout_height="226dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:orientation="vertical"
                    android:padding="@dimen/_5sdp"
                    app:layout_constraintStart_toStartOf="@id/Det">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:text="Strawberries"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_125sdp"
                            android:layout_marginLeft="@dimen/_125sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:src="@drawable/plusminus" />

                    </LinearLayout>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_220sdp"
                        android:layout_marginLeft="@dimen/_220sdp"
                        android:text="Rs 50/-"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_1sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:text="Cherries"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_155sdp"
                            android:layout_marginLeft="@dimen/_155sdp"
                            android:layout_marginTop="@dimen/_1sdp"
                            android:src="@drawable/plusminus" />

                    </LinearLayout>

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_220sdp"
                        android:layout_marginLeft="@dimen/_220sdp"
                        android:text="Rs 50/-"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/additem"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_80sdp"
                        android:layout_marginLeft="@dimen/_80sdp"
                        android:background="@color/green"
                        android:backgroundTint="@color/active"
                        android:text="Add more items"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"

                        app:cornerRadius="20dp" />


                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/loyalty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cat1"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp">

                <EditText
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="wrap_content"
                    android:text="Loyalty points applied"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/editPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/_10sdp"
                    android:src="@drawable/pen" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Delcharges"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/loyalty">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Delivery Charges"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 10/-"
                    android:layout_marginStart="@dimen/_120sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_120sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/taxes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/Delcharges">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Taxes and Charges"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 50/-"
                    android:layout_marginStart="@dimen/_110sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_110sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/taxes">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="Discount"
                    android:textColor="@color/lightgrey"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 5/-"
                    android:layout_marginStart="@dimen/_165sdp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_165sdp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/grandtotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/discount">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Grand Total"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs 110/-"
                    android:layout_marginStart="@dimen/_130sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_130sdp" />
            </LinearLayout>

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please note after placing the order on \n cancelation charges might apply"
                android:textColor="@color/lightgrey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/grandtotal" />


            <Button
                android:id="@+id/payment"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="Place Your Order"
                android:textAllCaps="false"
                android:backgroundTint="@color/active"
                android:textColor="@color/colorWhite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/note"
                android:layout_marginTop="@dimen/_10sdp"
                app:cornerRadius="20dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>